{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "object-curly-spacing": ["error", "always"],
    "keyword-spacing": ["error", 
      { 
        "before": true,
        "after": true 
      }
    ],
    "indent": ["error", "tab"],
    "quotes": ["error", "single"],
    "semi": [2, "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
